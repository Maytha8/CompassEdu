{
    "env": {
        "node": true,
        "commonjs": true,
        "es2022": true,
        "mocha": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        // No maximum length
        "max-len": "off",
        // Always have spacing in objects.
        "object-curly-spacing": ["error", "always"],
        // Warn when unused variables are set.
        "no-unused-vars": "warn",
        // Warn when blocks are not padded.
        "padded-blocks": ["warn", { "classes": "always", "blocks": "never" }],
        // Require a semicolon at the end of lines, except when inside a one-line block.
        "semi": ["error", "always", { "omitLastInOneLineBlock": true }],
        // Turn off jsdoc linting because it is deprecated as of ESLint v5.10.0.
        "valid-jsdoc": "off",
        // Allow use of 'arguments' within functions.
        "prefer-rest-params": "off"
    }
}
